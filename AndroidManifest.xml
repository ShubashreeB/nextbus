<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doug.nextbus"
    android:versionCode="22"
    android:versionName="2.02" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-library android:name="com.viewpagerindicator" >
    </uses-library>

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DarkTheme" >
        <activity
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:name=".activites.RoutePickerActivity"
            android:screenOrientation="portrait" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Stop List"
            android:name=".activites.StopListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Stop View"
            android:name=".activites.StopViewActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="About"
            android:name=".activites.CreditsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:label="Preferences"
            android:name=".activites.PreferencesActivity" >
        </activity>
        <activity
            android:label="Nearest Stops"
            android:name=".activites.NearbyStopListActivity" >
        </activity>
    </application>

</manifest>