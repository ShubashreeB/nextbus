<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <SlidingDrawer
        android:id="@+id/arrivalsDrawer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:content="@+id/arrivalList"
        android:handle="@+id/drawerHandle" >

        <LinearLayout
            android:id="@+id/drawerHandle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/titlecolor"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/drawerTextView"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="All Routes for this Stop"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/colorBand"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:orientation="horizontal" >

                <View
                    android:layout_width="45dp"
                    android:layout_height="fill_parent" />

                <View
                    android:id="@+id/colorBandRed"
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:background="@color/red" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="fill_parent" />

                <View
                    android:id="@+id/colorBandYellow"
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:background="@color/yellow" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="fill_parent" />

                <View
                    android:id="@+id/colorBandBlue"
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:background="@color/blue" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="fill_parent" />

                <View
                    android:id="@+id/colorBandGreen"
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:background="@color/green" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/arrivalList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black" >
        </ListView>
    </SlidingDrawer>

    <TextView
        android:id="@+id/firstArrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="180sp" />

    <View
        android:id="@+id/colorSeperator"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_below="@+id/firstArrival"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/red" />

    <ImageView
        android:id="@+id/refreshButton"
        android:background="@drawable/ic_menu_refresh"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/colorSeperator"
        android:layout_alignTop="@+id/firstArrival"
        android:gravity="center"
        android:padding="10dp" />

    <TextView
        android:id="@+id/fourthArrival"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/colorSeperator"
        android:layout_below="@+id/colorSeperator"
        android:gravity="center"
        android:text="17"
        android:textColor="@color/fade3"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/secondArrival"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/colorSeperator"
        android:layout_alignTop="@+id/fourthArrival"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/fade1"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/thirdArrival"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/secondArrival"
        android:layout_alignBottom="@+id/secondArrival"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="12"
        android:textColor="@color/fade2"
        android:textSize="50sp" />

</RelativeLayout>